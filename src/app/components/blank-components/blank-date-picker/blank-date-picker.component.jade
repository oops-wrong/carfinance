.form-group(ng-class="{'has-error': dateVM.hasError, 'group-on-focus': dateVM.isFocusedOn, 'group-with-pop': dateVM.isFocusedOn && dateVM.isOpenPop}")
    .row
        .col-md-4
            label.control-label(
                for="{{dateVM.name}}"
                ng-bind="dateVM.label"
                ng-class="{'required-label': dateVM.required}"
            )
        .col-md-4
            .dropdown.datepicker-wrapper(
                blank-extended-dropdown="dateVM.isExtendedDropdown"
            )
                button.btn.btn-secondary.dropdown-toggle.w-100(
                    aria-expanded="false"
                    aria-haspopup="true"
                    data-toggle="dropdown"
                    id="{{'a' + dateVM.name}}"
                    ng-blur="dateVM.isFocusedOn = false"
                    ng-focus="dateVM.isFocusedOn = true"
                    type="button"
                )
                    .input-group.input-group-date
                        input.form-control(
                            date-time-input="DD/MM/YYYY"
                            id="{{dateVM.name}}"
                            model-view-value="true"
                            name="{{::dateVM.name}}"
                            ng-class="{'border-blue-color': dateVM.isFocusedOn}"
                            ng-model="dateVM.model"
                            ng-required="dateVM.required"
                            type="text"
                            ui-mask="99/99/9999"
                        )
                        span.input-group-addon(ng-class="{'addon-blue': dateVM.isFocusedOn }")
                            i.fa.fa-calendar
                ul.dropdown-menu(
                    aria-labelledby="{{'#a' + dateVM.name}}"
                )
                    datetimepicker(
                        datetimepicker-config="dateVM.config"
                        ng-model="dateVM.pickerModel"
                        on-set-time="dateVM.setDate()"
                    )
        validation-alert(
            field="dateVM.field"
            form="dateVM.form"
            format="dateVM.format"
            has-error="dateVM.hasError"
            label="dateVM.label"
        )
        .icon-with-popover(ng-if='!dateVM.hasError')
            .icon(
                ng-class="{'icon-info': dateVM.info.length > 1}"
                ng-if="dateVM.info.length > 1"
                ng-click="dateVM.changeIsOpenPop()"
            )
            p(
                ng-if="dateVM.info.length > 1 && dateVM.isOpenPop"
                ng-bind="dateVM.info"
            )